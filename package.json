{
  "name": "@cany748/stretchly",
  "version": "0.0.1",
  "packageManager": "pnpm@8.10.5",
  "description": "The break time reminder app",
  "author": "Alexander Chepurnoi <cany748@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cany748/stretchly.git"
  },
  "bugs": {
    "url": "https://github.com/cany748/stretchly/issues"
  },
  "keywords": [
    "Stretchly",
    "break",
    "time",
    "reminder"
  ],
  "main": "app/main.js",
  "engines": {
    "node": "^18.11.0 || ^20.9.0"
  },
  "scripts": {
    "start": "electron ./app",
    "dev": "cross-env NODE_ENV=development electron ./app --trace-warnings --trace-deprecation --enable-logging --remote-debugging-port=9222",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder build --dir",
    "dist": "electron-builder build --x64 --ia32",
    "test": "mocha test --exit",
    "test-single": "mocha $1 --exit",
    "tdd": "mocha --watch test",
    "lint": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "build": {
    "appId": "net.hovancik.stretchly",
    "productName": "Stretchly",
    "appx": {
      "identityName": "33881JanHovancik.stretchly",
      "publisher": "CN=35004EDA-CCDD-4304-A014-784D754E043F",
      "publisherDisplayName": "Jan Hovancik",
      "applicationId": "Stretchly",
      "displayName": "Stretchly"
    },
    "win": {
      "target": [
        "nsis",
        "7z",
        "appx"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.0",
    "dbus-final": "github:Jelmerro/dbus-final",
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "humanize-duration": "^3.31.0",
    "i18next": "^23.7.6",
    "i18next-fs-backend": "^2.3.0",
    "luxon": "^3.4.4",
    "meeussunmoon": "^3.0.3",
    "ps-list": "7.2.0",
    "rtl-detect": "^1.1.2",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@cany748/eslint-config": "^1.0.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "spectron": "^19.0.0"
  },
  "eslintConfig": {
    "extends": "@cany748"
  },
  "prettier": {
    "editorconfig": true,
    "printWidth": 140
  }
}
